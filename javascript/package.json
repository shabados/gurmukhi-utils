{
  "name": "gurmukhi-utils",
  "version": "4.0.0-alpha.0",
  "description": "Javascript library for converting, analyzing, and testing Gurmukhi strings",
  "license": "MIT",
  "author": "Bhajneet S.K. <bhajneet@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/shabados/gurmukhi-utils",
    "directory": "javascript"
  },
  "homepage": "https://github.com/shabados/gurmukhi-utils",
  "bugs": "https://github.com/shabados/gurmukhi-utils/issues/new/choose",
  "keywords": [
    "ascii",
    "granth",
